<h1>Your Articles</h1>

<% @articles.each do |article| %>
<ul>
  <li>
    <%= link_to article.title, article_path(article)  %>
    <%= link_to "Delete",
    article_path(article),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </li>

</ul>
<% end %>

<%= link_to "Create an article", new_article_path %>
